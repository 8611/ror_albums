<!DOCTYPE html>
<html>
<head>
  <title>RoR Albums</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
<div class="page-header"><h1><a href="/">Albums</a> <small>with Rails</small></h1></div>
	<div class="row">
		<div class="col-md-8">
			<%= yield %>
		</div>
		<div class="col-md-4">
			<div class="panel panel-default">
				<div class="panel-heading"><h1>Menu</h1></div>
				<div class="panel-body">
					<div class="list-group">
						<%= link_to "Albums", albums_path, {:class => "list-group-item"} %>
						<%= link_to "Artists", artists_path, {:class => "list-group-item"} %>
						<%= link_to "Countries", countries_path, {:class => "list-group-item"} %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

</body>
</html>
