    <%= f.datetime_select :date_release, start_year: 1900, :include_blank => true, :default => nil  %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :artist_id %><br>
    <%= f.select(:artist_id, options_for_select(@artists)) %>
  </div>
